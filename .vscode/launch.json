{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha Debug All",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-r",
				"ts-node/register",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceFolder}/test/**/*-spec.ts"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"protocol": "inspector"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha Run All",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-r",
				"ts-node/register",
				"--colors",
				"${workspaceFolder}/test/**/*-spec.ts"
			],
			"console": "integratedTerminal",
		}
	]
  }